         <secondaryColor>ffffff</secondaryColor>
         <fontPath>./_inc/fonts/gomarice_no_continue.ttf</fontPath>
         <fontSize>0.04</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>center</alignment>      
      </textlist>
   </view> 
  
  
