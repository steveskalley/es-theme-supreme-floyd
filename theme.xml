<!--
System Gamelist
--> 

   <view name="basic,detailed,video">
      <textlist name="gamelist">
         <zIndex>2</zIndex>	      
         <selectorColor>1c1c1c00</selectorColor> 
	     <selectedColor>F3E804</selectedColor>     
         <pos>0.33 0.17</pos>
         <size>0.33 0.74</size>
